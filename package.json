{
  "name": "infra-repo",
  "version": "0.1.10",
  "bin": {
    "infra-repo": "bin/infra-repo.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:fga": "jest ./*/fineGrained.test.ts --passWithNoTests",
    "test:snap": "jest ./*/snapshot.test.ts --passWithNoTests",
    "cdk": "cdk",
    "prepare": "husky",
    "format:ci": "prettier --check '*/**/*.ts'",
    "format:fix": "prettier --write '*/**/*.ts'",
    "lint:ci": "ESLINT_USE_FLAT_CONFIG=true eslint '*/**/*.ts' --max-warnings 0",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=true eslint '*/**/*.ts' --max-warnings 0 --fix",
    "md-lint-fix": "prettier --write '*/**/*.md' && markdownlint-cli2 '*/**/*.md'",
    "release": "standard-version && git push --follow-tags",
    "depcheck": "depcheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.19.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.16.9",
    "depcheck": "^1.4.7",
    "eslint": "^9.19.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "markdownlint-cli2": "^0.17.2",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "typescript-eslint": "^8.22.0"
  },
  "dependencies": {
    "@aws-cdk/aws-kinesisfirehose-alpha": "^2.160.0-alpha.0",
    "@aws-cdk/aws-kinesisfirehose-destinations-alpha": "^2.160.0-alpha.0",
    "@aws-lambda-powertools/tracer": "^2.13.1",
    "@aws-sdk/client-cloudwatch": "^3.738.0",
    "@aws-sdk/client-dynamodb": "^3.738.0",
    "@aws-sdk/client-kinesis": "^3.738.0",
    "@aws-sdk/lib-dynamodb": "^3.734.0",
    "@middy/core": "^6.0.0",
    "aws-cdk": "2.177.0",
    "aws-cdk-lib": "2.160.0",
    "cdk-nag": "^2.35.7",
    "constructs": "^10.4.2",
    "esbuild": "^0.24.2",
    "husky": "^9.1.7",
    "tsx": "^4.19.2",
    "typescript": "~5.7.3",
    "winston": "^3.17.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run lint:ci"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint-cli2"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
